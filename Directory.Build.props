<Project>
  
  <PropertyGroup>
    <!-- Version Information -->
    <Version>1.0.0-beta</Version>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <Product>CX Language - AI-Native Agentic Programming Language</Product>
    <Company>Aura CX</Company>
    <Authors>Aaron Hebert</Authors>
    <Copyright>Copyright Â© 2025 Aaron Hebert</Copyright>
    
    <!-- Treat all warnings as errors globally -->
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    
    <!-- Optional: Set warning level to maximum for stricter code quality -->
    <WarningLevel>5</WarningLevel>
    
    <!-- Optional: Enable nullable reference types warnings -->
    <Nullable>enable</Nullable>
    
    <!-- Optional: Enable all analyzers for better code quality -->
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AnalysisLevel>latest</AnalysisLevel>
  </PropertyGroup>

</Project>
