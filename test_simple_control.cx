function main() {
    print("Testing while loop:")
    
    // Simple condition that will be false initially to test the loop works
    condition = false
    
    if (condition) {
        print("This should not print")
    }
    
    print("Testing a loop that executes once:")
    
    // We can't do i = i + 1 yet due to language design
    // So let's test a simple case
    executed = false
    if (executed == false) {
        print("Loop body executed!")
    }
}
