// Test 1: Basic class declaration
class Person 
{
    name: string = "Default";
    age: number = 0;
    
    constructor(name, age) 
    {
        this.name = name;
        this.age = age;
    }
    
    function greet() 
    {
        print("Hello, my name is " + this.name);
    }
}

// Test 2: Create instance
print("\nTest 2: Creating Instance");
var alice = new Person("Alice", 30);
alice.greet();

print("\nBasic Class Test Complete!");
