#include stdio

bool redir_out(char *filename){
	stdout.close;
	return stdout.reopen(filename, "w");
}

char *read_file(file &infile){
	char *str = "read: ";
	int count = 0;

	// while not end of file stream
	while(!infile.eof){
		// read each char
		str += infile.getc;
		count++;
	}

	puts("read " + count.to_str + " chars...");

	return str;
}

int main () {

	// file stream type
	file myfile;

		// open for read
		if(!myfile.open("sometextfile", "r"))
			perror("error reopening file");
		else {

			// writes to output file
			puts(read_file(myfile));

			// close file
			myfile.close;
		}

    return 0;
}