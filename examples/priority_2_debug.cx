// Simple Animal Agent to test basic functionality
class SimpleAnimalAgent
{
    name: string;
    animalType: string;
    
    constructor(agentName, animal)
    {
        this.name = agentName;
        this.animalType = animal;
        print("ü¶ä " + this.name + " the " + this.animalType + " is created!");
    }
    
    function speak(message)
    {
        var sound = "[" + this.animalType + " voice] " + message;
        tts.SpeakAsync(sound);
        print("üîä " + this.name + ": " + sound);
        return "spoken";
    }
    
    function generateResponse(input)
    {
        var prompt = "You are " + this.name + " the " + this.animalType + ". Respond briefly to: " + input;
        var response = textGen.GenerateAsync(prompt);
        return response;
    }
}

try
{
    print("‚úÖ Testing animal personality creation...");
