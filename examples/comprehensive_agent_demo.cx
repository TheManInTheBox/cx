// CX Language - Comprehensive Agent Keyword Demo
// Testing the new simplified agent syntax for autonomous programming

using textGen from "Cx.AI.TextGeneration";

// Autonomous Agent Class with AI Integration
class DebateAgent
{
    name: string;
    perspective: string;
    voiceStyle: string;
    
    constructor(agentName, viewpoint, style)
    {
        this.name = agentName;
        this.perspective = viewpoint;
        this.voiceStyle = style;
        print("🤖 Autonomous agent created: " + agentName + " (" + viewpoint + ")");
    }
    
    function generateArgument(topic)
    {
        var prompt = "As " + this.name + ", argue about " + topic + " from the perspective of " + this.perspective;
        var argument = textGen.GenerateAsync(prompt, {
            temperature: 0.8,
            maxTokens: 150
        });
        return argument;
    }
    
    function introduce()
    {
        print("Hello! I'm " + this.name + ", speaking from " + this.perspective + " in " + this.voiceStyle + " style");
    }
}

try
{
    print("🚀 CX AUTONOMOUS AGENT DEMONSTRATION");
    print("===================================");
    
    // Create three autonomous agents using the new simplified syntax
    var climateDr = agent DebateAgent("Dr. Rodriguez", "a climate scientist", "authoritative");
    var activistSarah = agent DebateAgent("Sarah Green", "an environmental activist", "passionate");
    var economistMark = agent DebateAgent("Prof. Williams", "an economist", "analytical");
    
    print("\n🎭 Agent Introductions:");
    climateDr.introduce();
    activistSarah.introduce();
    economistMark.introduce();
    
    print("\n💬 Generating AI-powered arguments...");
    var topic = "climate change policy";
    
    // Each autonomous agent generates AI-powered arguments
    var arg1 = climateDr.generateArgument(topic);
    print("🔬 " + climateDr.name + ": " + arg1);
    
    var arg2 = activistSarah.generateArgument(topic);
    print("🌱 " + activistSarah.name + ": " + arg2);
    
    var arg3 = economistMark.generateArgument(topic);
    print("💰 " + economistMark.name + ": " + arg3);
    
    print("\n✅ AUTONOMOUS AGENT DEMO COMPLETE!");
    print("✅ Agent keyword syntax fully operational!");
    print("✅ Three autonomous agents with AI capabilities created successfully!");
}
catch (error)
{
    print("❌ Error in agent demonstration: " + error);
}
