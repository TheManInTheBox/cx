// String concatenation test

// String + String
var str1 = "Hello ";
var str2 = "World!";
var result = str1 + str2;
print("String + String: " + result);

// String + Number
var num = 42;
var strNum = "The answer is: " + num;
print("String + Number: " + strNum);

// Number + String
var numStr = 100 + " points";
print("Number + String: " + numStr);

// Multiple concatenations
var complex = "This " + "is " + "a " + "complex " + "concatenation " + "test";
print("Multiple concatenations: " + complex);

// Using variables
var firstName = "John";
var lastName = "Doe";
var fullName = firstName + " " + lastName;
print("Full Name: " + fullName);

print("Done!");
