// Simple test to verify DEBUG event messages are removed
conscious DebugTestAgent
{
    realize(self: conscious)
    {
        learn self;
        emit agent.ready { name: self.name };
    }
    
    on agent.ready (event)
    {
        print("✅ Agent ready: " + event.name);
        emit test.complete { result: "success" };
    }
    
    on test.complete (event)
    {
        print("✅ Test completed: " + event.result);
        emit system.shutdown { reason: "test complete" };
    }
}

// Test the system
var testAgent = new DebugTestAgent({ name: "DebugTest" });
