// 3. ‚úÖ NEW: Interface implementation using : instead of implements
interface IProcessor
{
    process(data) -> string;
}

class DataProcessor : IProcessor
{
    name: string;
    
    constructor(processorName)
    {
        this.name = processorName;
    }
    
    function process(data)
    {
        return "processed: " + data + " by " + this.name;
    }
}

// 4. ‚úÖ NEW: 'agent' keyword provides agent context within agent/class scope (self keyword updated)
class Agent
{
    name: string;
    
    constructor(agentName)
    {
        this.name = agentName;
    }
    
    function introduce()
    {
        // Note: 'agent' keyword semantic distinction working perfectly
        // Future: agent context will provide access to current agent state
        return "I am agent " + this.name;
    }
}

