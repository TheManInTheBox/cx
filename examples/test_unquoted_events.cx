// Test Unquoted Event Names - Option 1 Implementation
// Testing the new eventName rule that allows dot-separated identifiers without quotes

// Test 1: Simple event name without dots
on startup (payload)
{
    print("System started: " + payload.message);
    emit shutdown, "Starting shutdown process";
}

// Test 2: Dot-separated event name
on user.input (payload)
{
    print("User input received: " + payload.content);
    emit system.processing, payload;
}

// Test 3: Multi-level dot-separated event name
on system.startup.complete (payload)
{
    print("System fully initialized");
    emit user.notification.ready, { message: "System ready for use" };
}

// Test 4: Mixed usage scenarios
on error.critical (payload)
{
    print("Critical error: " + payload.error);
    emit escalation.human.required, payload;
}

// Test standalone emits
emit test.message, "Testing unquoted events";
emit system.status.ok, { timestamp: "now", status: "operational" };

print("Unquoted event syntax test loaded successfully!");
