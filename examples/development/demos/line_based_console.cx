            context: "Line command routing",
            evaluate: "Command starts with 'echo'",
            data: { command: event.command },
            handlers: [ line.command.echo ]
        };
        
        is {
            context: "Line command routing",
            evaluate: "User typed 'exit' command",
            data: { command: event.command },
            handlers: [ line.command.exit ]
        };
        
