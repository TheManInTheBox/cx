// Test 2: Constructor with parameters and field assignment
print("2. Constructor with Parameters and Fields:");
class PersonClass
{
    name: string;
    age: number;
    
    constructor(personName: string, personAge: number)
    {
        print("   Constructor called with: " + personName + ", " + personAge);
        this.name = personName;
        this.age = personAge;
        print("   Fields assigned successfully");
    }
}

var alice = new PersonClass("Alice", 30);
print("   PersonClass instance created with parameters");
print("");

// Test 3: Methods without field access
print("3. Simple Method Calls:");
class GreeterClass
{
    constructor()
    {
        print("   GreeterClass constructor called");
    }
    
    function sayHello()
    {
        print("   Hello from GreeterClass method!");
    }
    
    function sayGoodbye()
    {
        print("   Goodbye from GreeterClass method!");
    }
}

var greeter = new GreeterClass();
greeter.sayHello();
greeter.sayGoodbye();
print("   Multiple method calls successful");
print("");

// Test 4: Multiple classes in same program
print("4. Multiple Classes:");
class ClassA
{
    constructor()
    {
        print("   ClassA created");
    }
    
    function methodA()
    {
        print("   ClassA method executed");
    }
}

class ClassB
{
    constructor()
    {
        print("   ClassB created");
    }
    
    function methodB()
    {
        print("   ClassB method executed");
    }
}

var objA = new ClassA();
var objB = new ClassB();
objA.methodA();
objB.methodB();
print("   Multiple classes working together");
print("");

