{
  "project": {
    "name": "CX Language Vector Database Demo",
    "version": "1.0.0",
    "description": "Demonstrates document ingestion and vector search capabilities",
    "features": [
      "Document ingestion service",
      "Vector embedding generation",
      "Local vector database storage",
      "Semantic search functionality",
      "Consciousness-aware processing"
    ],
    "technologies": {
      "language": "CX Language",
      "runtime": ".NET 9",
      "vectorDatabase": "In-Memory Vector Store",
      "embeddingService": "Azure OpenAI",
      "eventSystem": "CX EventBus"
    },
    "capabilities": {
      "documentFormats": ["txt", "md", "json"],
      "chunkingStrategy": "overlapping",
      "vectorDimensions": 1536,
      "searchAlgorithm": "cosine similarity"
    },
    "performance": {
      "targetLatency": "< 10 seconds per MB",
      "chunkSize": 1000,
      "chunkOverlap": 200,
      "batchProcessing": true
    }
  },
  "documentation": {
    "readme": "README.md",
    "examples": "document_ingestion_demo.cx",
    "sampleData": "sample_documents/"
  }
}
