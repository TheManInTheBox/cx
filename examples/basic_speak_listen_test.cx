// Simple test of speak and listen cognitive functions
// Testing basic functionality without advanced handlers

class SimpleVoiceAgent
{
    name: string = "SimpleVoice";
    
    function testBasicSpeak()
    {
        print("Testing basic speak function...");
        
        // Correct speak syntax with structured parameters
        speak { text: "Hello from cognitive speak function" };
        print("✅ Speak function called");
    }
    
    function testBasicListen()
    {
        print("Testing basic listen function...");
        
        // Correct listen syntax with structured parameters
        listen { prompt: "Listening for voice input" };
        print("✅ Listen function called");
    }
}

// Test the voice functions
var agent = new SimpleVoiceAgent();

print("=== BASIC COGNITIVE VOICE TEST ===");
print("Testing if speak and listen functions are properly registered");
print("");

// Test basic functionality
agent.testBasicSpeak();
print("");
agent.testBasicListen();

print("");
print("=== BASIC TEST COMPLETE ===");
