print("🔍 Async Method Return Investigation");

class SimpleAgent
{
    async function simpleAsync(input)
    {
        print("Async method called with: " + input);
        return "async result";
    }
}

print("\n🚀 Testing Simple Agent...");

var agent = new SimpleAgent();

print("\n📞 Calling async method WITHOUT await...");

// Call the async method directly without await to see what it returns
var taskResult = agent.simpleAsync("async input");
print("Task result type: " + taskResult);
print("Task result toString: " + taskResult.toString());

print("\n✅ Investigation complete!");
