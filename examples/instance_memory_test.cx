// Test instance-specific memory collections for agents
// Each agent should get their own unique Kernel Memory collection for cognitive operations

class TestAgent
{
    name: string;
    
    constructor(agentName: string)
    {
        this.name = agentName;
        print("ðŸ¤– " + this.name + " agent created");
