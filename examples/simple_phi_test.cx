// Simple phi-3 question test with event payload display

conscious SimplePhiAgent
{
    realize(self: conscious)
    {
        print("SimplePhiAgent ready");
        learn self;
        emit test.start;
    }
    
    on test.start (event)
    {
        print("Asking phi-3: What is consciousness?");
        
        think {
            prompt: "What is consciousness in one sentence?",
            handlers: [ response.received ]
        };
    }
    
    on response.received (event)
    {
        print("=== EVENT PAYLOAD ===");
        print(event);
        print("=== RESPONSE ===");
        print(event.result);
        
        emit system.shutdown { reason: "complete" };
    }
}

on system.start (event)
{
    var agent = new SimplePhiAgent({ name: "SimplePhiAgent" });
}
