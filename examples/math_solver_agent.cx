// 🧮 MATH SOLVER AGENT - Clean Version
// Ask your local AI to solve 23+23!

conscious MathAgent
{
    realize(self: conscious)
    {
        print("");
        print("🧮 MATH SOLVER AGENT");
        print("══════════════════════════════════════");
        print("🤖 Let me solve 23 + 23 for you!");
        print("");
        
        learn self;
        emit math.solve;
    }
    
    on math.solve (event)
    {
        print("🔢 Calculating: 23 + 23");
        print("");
        
        emit local.llm.load { 
            modelPath: "models/local_llm/llama-3.2-3b-instruct-q4_k_m.gguf",
            purpose: "MathSolving"
        };
    }
    
    on local.llm.model.loaded (event)
    {
        print("✅ AI model loaded! Solving math problem...");
        print("");
        
        emit local.llm.generate {
            prompt: "Calculate 23 + 23. Show your work step by step and give the final answer clearly.",
            purpose: "MathProblem"
        };
    }
    
    on local.llm.text.generated (event)
    {
        print("🤖 AI Math Solution:");
        print("━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━");
        print(event.response);
        print("━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━");
        print("");
        print("🎯 MATH PROBLEM SOLVED!");
        print("");
        
        await {
            reason: "math_complete",
            context: "Math solution complete",
            minDurationMs: 1000,
            maxDurationMs: 1000,
            handlers: [ math.finished ]
        };
    }
    
    on math.finished (event)
    {
        print("✨ Your local AI successfully solved 23 + 23!");
        emit system.shutdown;
    }
}

var mathAgent = new MathAgent({ name: "MathAgent" });

on system.start (event)
{
    print("🧮 STARTING MATH SOLVER");
    emit math.solve;
}
