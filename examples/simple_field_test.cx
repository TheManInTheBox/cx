// Test field access in methods - isolating the issue

class SimpleClass
{
    name: string;
    
    constructor(config)
    {
        print("Constructor: setting name to " + config.name);
        this.name = config.name;
        print("Constructor: this.name is now " + this.name);
    }
    
    function getName()
    {
        print("getName: about to access this.name");
        var result = this.name;
        print("getName: accessed this.name successfully: " + result);
        return result;
    }
}

try
{
    print("Creating instance...");
    var obj = new SimpleClass({ name: "TestName" });
    print("Calling getName...");
    var result = obj.getName();
    print("Got result: " + result);
}
catch (error)
{
    print("Error: " + error);
}
