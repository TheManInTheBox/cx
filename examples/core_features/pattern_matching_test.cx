// Pattern Matching Verification Test

print("=== Pattern Matching Test ===");

// Global wildcard handler
on user.any.input (payload)
{
    print("âœ… WILDCARD HANDLER FIRED: user.any.input - " + payload.message);
}

// Specific event handler
on user.chat.message (payload)
{
    print("âœ… SPECIFIC HANDLER FIRED: user.chat.message - " + payload.text);
}

print("\nðŸ§ª TEST 1: Emit user.chat.message (should match both handlers)");
emit user.chat.message, { text: "Hello from chat!", message: "Chat message" };

print("\nðŸ§ª TEST 2: Emit user.voice.input (should match wildcard only)");
emit user.voice.input, { message: "Voice input", audio: "voice data" };

print("\n=== Tests Complete - Check for handler execution above ===");
