// Comprehensive Llama Debugging Test
// Shows detailed step-by-step process

conscious LlamaDebugTest {
    realize(self: conscious) {
        print("🔍 Comprehensive Llama Debug Test");
        print("==================================");
        print("1. Starting consciousness entity...");
        
        learn self;
        print("2. Learning complete.");
        
        print("3. Sending inference request to Llama model...");
        infer {
            context: "debug test",
            data: "What is 1+1?",
            handlers: [llama.debug.result]
        };
        print("4. Inference request sent - waiting for response...");
    }

    on llama.debug.result(event) {
        print("5. 🎉 RESPONSE RECEIVED!");
        print("   ════════════════════");
        print("   📊 Result: " + (event.result || "NULL"));
        print("   🎯 Source: " + (event.source || "UNKNOWN"));
        print("   📈 Confidence: " + (event.confidence || "0"));
        print("   ❌ Error: " + (event.error || "NONE"));
        print("   ⏰ Timestamp: " + (event.timestamp || "NO TIME"));
        print("");
        print("6. ✅ Test Complete - Shutting down...");
        
        emit system.shutdown {
            reason: "llama_debug_completed",
            success: true
        };
    }
}
