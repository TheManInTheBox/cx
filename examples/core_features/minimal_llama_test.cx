// Minimal Llama Test - Just Check Model Loading
// Very simple test to isolate the issue

conscious MinimalTest {
    realize(self: conscious) {
        print("🔍 Minimal Llama Test");
        print("====================");
        
        // Just test if the model responds at all
        infer {
            context: "simple test",
            data: "Hello",
            handlers: [minimal.result]
        };
    }

    on minimal.result(event) {
        print("📊 Result: " + (event.result || "NO RESULT"));
        print("❌ Error: " + (event.error || "NO ERROR"));
        
        emit system.shutdown { reason: "test_done" };
    }
}
