// Final Console Color Verification
// Tests Console.Color implementation with all supported features

conscious FinalColorTest {
    realize() {
        emit system.console.write { text: "=== Final Console Color Test ===" };
        
        // Test standard colors
        emit system.console.color.set { foreground: "red" };
        emit system.console.write { text: "✅ RED text" };
        
        emit system.console.color.set { foreground: "green" };
        emit system.console.write { text: "✅ GREEN text" };
        
        emit system.console.color.set { foreground: "blue" };
        emit system.console.write { text: "✅ BLUE text" };
        
        // Test bright colors
        emit system.console.color.set { foreground: "bright_red" };
        emit system.console.write { text: "✅ BRIGHT RED text" };
        
        // Test background colors
        emit system.console.color.set { foreground: "white", background: "red" };
        emit system.console.write { text: "✅ White on RED background" };
        
        // Test RGB mapping
        emit system.console.color.set { r: 255, g: 128, b: 0 };
        emit system.console.write { text: "✅ RGB Orange (mapped to closest console color)" };
        
        // Test hex mapping
        emit system.console.color.set { hex: "#FF0000" };
        emit system.console.write { text: "✅ Hex Red #FF0000 (mapped to console red)" };
        
        // Reset colors
        emit system.console.color.reset {};
        emit system.console.write { text: "✅ Colors reset to normal" };
        emit system.console.write { text: "Console Color Test Complete!" };
    }
}

new FinalColorTest();
