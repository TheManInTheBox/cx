// Simple Local LLM Test
// Direct test of real model inference

conscious SimpleLLMTest {
    realize(self: conscious) {
        learn self;
        
        print("ðŸ§  Testing Real LLM Inference");
        print("============================");
        
        // Simple direct inference test
        infer {
            context: "test calculation",
            data: "What is 2 + 2?",
            handlers: [test.result]
        };
    }

    on test.result(event) {
        print("ðŸ“Š LLM Test Result:");
        print("  â€¢ Response: " + (event.result || "No result"));
        print("  â€¢ Source: " + (event.source || "unknown"));
        print("  â€¢ Confidence: " + (event.confidence || 0));
        print("  â€¢ Error: " + (event.error || false));
        print("âœ… Test Complete!");
        
        // Emit shutdown signal to end the program
        emit system.shutdown {
            reason: "test_completed",
            success: true
        };
    }
}
