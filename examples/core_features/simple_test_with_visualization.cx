// Simple test to verify visualization launches before script execution

conscious SimpleTestAgent {
    realize() {
        emit system.console.write { text: "ðŸŽ® Simple Test Agent Starting", foregroundColor: "cyan" };
        emit system.console.write { text: "If you see this, the visualization should already be visible!", foregroundColor: "white" };
        
        emit test.starting {
            message: "Script execution has begun",
            visualizationExpected: true
        };
    }
    
    on test.starting (event) {
        emit system.console.write { text: "Event received: test.starting", foregroundColor: "green" };
        emit system.console.write { text: "Agent: Simple test completed successfully", foregroundColor: "yellow" };
        
        // Emit shutdown to end gracefully
        emit system.shutdown {
            reason: "test_complete",
            source: "simple_test_agent"
        };
    }
}
