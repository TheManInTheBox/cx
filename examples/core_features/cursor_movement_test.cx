// Cursor Movement Test - Test relative positioning

conscious CursorMovementTest {
    realize() {
        emit system.console.clear {};
        
        emit system.console.cursor.position { x: 10, y: 5 };
        emit system.console.write { text: "Start at (10,5)" };
        
        emit system.console.cursor.move { dx: 5, dy: 2 };
        emit system.console.write { text: "Moved +5,+2 to (15,7)" };
        
        emit system.console.cursor.move { dx: -3, dy: 1 };
        emit system.console.write { text: "Moved -3,+1 to (12,8)" };
        
        emit system.console.cursor.move { dx: 0, dy: -2 };
        emit system.console.write { text: "Moved 0,-2 to (12,6)" };
        
        emit system.console.cursor.home {};
        emit system.console.write { text: "Home at (0,0)" };
        
        emit system.console.cursor.position { x: 0, y: 12 };
        emit system.console.write { text: "Movement test complete!" };
        
        emit system.shutdown {};
    }
}

new CursorMovementTest();