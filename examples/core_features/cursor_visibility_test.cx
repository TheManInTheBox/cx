// Cursor Hide/Show Test - Test visibility controls

conscious CursorVisibilityTest {
    realize() {
        emit system.console.clear {};
        
        emit system.console.write { text: "Testing cursor visibility..." };
        
        emit system.console.cursor.position { x: 0, y: 3 };
        emit system.console.write { text: "Cursor will hide in 2 seconds..." };
        
        emit system.console.cursor.hide {};
        emit system.console.cursor.position { x: 0, y: 5 };
        emit system.console.write { text: "Cursor is now HIDDEN (no blinking)" };
        
        emit system.console.cursor.position { x: 0, y: 7 };
        emit system.console.write { text: "Cursor will show again in 2 seconds..." };
        
        emit system.console.cursor.show {};
        emit system.console.cursor.position { x: 0, y: 9 };
        emit system.console.write { text: "Cursor is now VISIBLE again!" };
        
        emit system.console.cursor.position { x: 0, y: 11 };
        emit system.console.write { text: "Visibility test complete!" };
        
        emit system.shutdown {};
    }
}

new CursorVisibilityTest();
