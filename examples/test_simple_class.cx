// Simple class test - minimal functionality
// Following Allman-style brackets

class SimpleClass
{
    value: string;
    
    constructor(val)
    {
        value = val;
        print("SimpleClass created with: " + value);
    }
    
    function getValue()
    {
        return value;
    }
}

print("=== Simple Class Test ===");

var obj = new SimpleClass("Hello World");
var result = obj.getValue();
print("Got value: " + result);

print("=== Test Complete ===");
