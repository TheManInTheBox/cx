// Complete class system test with method calls
print("=== CX Class System Demo ===");

class Person 
{
    name: string;
    age: number;
    
    constructor(name: string, age: number) 
    {
        this.name = name;
        this.age = age;
    }
    
    function greet() 
    {
        print("Hello from " + this.name);
    }
    
    function getAge() 
    {
        print("Age: " + this.age);
    }
}

// Create and use objects
print("Creating people...");
var alice = new Person("Alice", 30);
var bob = new Person("Bob", 25);

print("Testing method calls...");
alice.greet();
bob.greet();
alice.getAge();
bob.getAge();

print("=== Class System Test Complete ===");
