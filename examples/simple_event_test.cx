// Simple event test to verify event system is working
class SimpleAgent
{
    name: string;
    
    constructor(agentName)
    {
        this.name = agentName;
        print("Created simple agent: " + this.name);
    }
    
    // Simple event handler
    on test.event (payload)
    {
        print("Received test event: " + payload.message);
    }
    
    function doTest()
    {
        print("About to emit test event");
        emit test.event, { message: "Hello from event system!" };
        print("Test event emitted");
        return "Test complete";
    }
}

// Test the event system
var agent = new SimpleAgent("SimpleTest");
var result = agent.doTest();
print("Result: " + result);
