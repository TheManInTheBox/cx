// Test fixed while loop with working assignment operators
print("=== Testing Fixed While Loop ===");

var counter = 0;
print("Initial counter: " + counter);

while (counter < 5)
{
    print("Loop iteration: " + counter);
    counter += 1;
}

print("Final counter: " + counter);
print("While loop completed successfully!");

// Test another scenario
print("\n=== Test 2: Countdown Loop ===");
var countdown = 5;
while (countdown > 0)
{
    print("Countdown: " + countdown);
    countdown -= 1;
}
print("Countdown complete!");

print("\n=== While Loop Tests Complete ===");
