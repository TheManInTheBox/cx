
class SimpleAgent
{
    name: string;
    
    constructor(agentName)
    {
        this.name = agentName;
    }
    
    on test.event (payload)
    {
        print("Simple event handler triggered");
        if (payload == "test")
        {
            print("Payload matches test");
        }
    }
}

try
{
    var testAgent = agent SimpleAgent("TestAgent");
    print("Agent created successfully");
    
    emit test.event, "test";
    print("Event emitted successfully");
}
catch (error)
{
    print("Error: " + error);
}
