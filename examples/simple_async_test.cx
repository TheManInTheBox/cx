print("ðŸ§ª Simple Async Test");

class SimpleAgent
{
    // Non-async method first
    function simpleMethod(input)
    {
        print("Simple method called with: " + input);
        return "simple result";
    }
    
    // Very simple async method
    async function simpleAsync(input)
    {
        print("Async method called with: " + input);
        return "async result";
    }
}

print("\nðŸš€ Testing Simple Agent...");

var agent = new SimpleAgent();

print("\nðŸ“ž Calling sync method...");
var syncResult = agent.simpleMethod("test input");
print("Sync result: " + syncResult);

print("\nðŸ“ž Calling async method...");
var asyncResult = await agent.simpleAsync("async input");
print("Async result: " + asyncResult);

print("\nâœ… Simple async test complete!");
