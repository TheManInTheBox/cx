// Simple test for class-based event handlers

class TestAgent
{
    name: string;
    isActive: boolean;
    
    constructor(agentName)
    {
        this.name = agentName;
        this.isActive = true;
        print("✅ Agent created: " + this.name);
    }
    
    // Simple event handler inside class
    on test.simple (payload)
    {
        if (this.isActive)
        {
            print("🎯 " + this.name + " received: " + payload);
            emit test.response, "Response from " + this.name;
        }
    }
    
    // Another event handler
    on test.response (payload)
    {
        print("📝 " + this.name + " got response: " + payload);
    }
}

print("🚀 Creating test agent...");
var testAgent = agent TestAgent("TestBot");

print("📡 Testing event emission...");
emit test.simple, "Hello from main program";

print("✅ Class event handler test complete!");
