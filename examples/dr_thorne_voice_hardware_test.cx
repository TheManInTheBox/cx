    on realtime.voice.response (event)
    {
        // Check if audio data is available
        is {
            context: "Hardware audio data verification",
            evaluate: "Audio data received from Azure Realtime API",
            data: { audioData: event.audioData },
            handlers: [ voice.hardware.audio.verified ]
        };
        
        // Check if synthesis is complete
        is {
            context: "Voice synthesis completion check",
            evaluate: "Azure voice synthesis process completed",
            data: { isComplete: event.isComplete },
            handlers: [ voice.synthesis.complete ]
        };
    }
    
    on voice.hardware.audio.verified (event)
    {
        print("ğŸ”Š Hardware-level audio data received");
        print("ğŸ“Š Audio format verification:");
        print("  â€¢ Data type: " + typeof(event.audioData));
        print("  â€¢ Hardware processing: NAudio WaveOutEvent");
        print("  â€¢ Buffer optimization: 4x safety buffer");
        print("  â€¢ GC protection: Persistent BufferedWaveProvider");
    }
    
    on voice.synthesis.complete (event)
    {
        print("âœ… Dr. Thorne's Hardware Audio Bridge test complete!");
        print("ğŸµ Voice synthesis and hardware playback verified");
        
        // Test 4: Hardware performance metrics
        emit voice.hardware.metrics.collect;
    }
    
    on voice.hardware.metrics.collected (event)
    {
        print("ğŸ“Š Hardware Performance Metrics:");
        print("  â€¢ Latency: " + event.latencyMs + "ms");
        print("  â€¢ Buffer underruns: " + event.bufferUnderruns);
        print("  â€¢ Hardware compatibility: " + event.hardwareCompatibility);
        print("  â€¢ Audio quality: " + event.audioQuality);
        
        print("ğŸ”¬ Dr. Thorne's hardware analysis complete!");
        emit voice.hardware.test.complete { 
            status: "success",
            hardwareOptimized: true,
            azureIntegrated: true
        };
    }
    
    on voice.output.started (event)
    {
        print("â–¶ï¸ Hardware playback initiated:");
        print("  â€¢ Audio length: " + event.audioLength + " bytes");
        print("  â€¢ Sample rate: " + event.sampleRate + "Hz");
        print("  â€¢ Channels: " + event.channels);
        print("  â€¢ Hardware device: NAudio WaveOutEvent");
    }
    
    on voice.output.completed (event)
    {
        print("âœ… Hardware playback completed successfully");
        print("ğŸ§ NAudio hardware integration verified");
    }
    
    on voice.output.error (event)
    {
        print("âŒ Hardware audio error detected:");
        print("  â€¢ Error: " + event.error);
        print("ğŸ”§ Dr. Thorne recommends checking NAudio hardware compatibility");
    }
}

