            print("  ğŸ§ Device: " + device);
        }
        
        // Test 2: Azure Realtime API connection with hardware awareness
        print("ğŸŒ Connecting to Azure Realtime API for voice synthesis...");
        emit realtime.connect { demo: "dr_thorne_hardware_test" };
    }
    
    on realtime.connected (event)
    {
        print("âœ… Azure Realtime API connected");
        emit realtime.session.create { 
            deployment: "gpt-4o-mini-realtime-preview",
            mode: "voice"
        };
