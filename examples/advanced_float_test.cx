// Advanced float literal test - testing edge cases and complex scenarios

print("=== Advanced Float Literal Test ===");

// Basic float literals
var price = 19.99;
var pi = 3.14159;
var temperature = -40.5;
var zero = 0.0;

print("Price: " + price);
print("Pi: " + pi);
print("Temperature: " + temperature);
print("Zero: " + zero);

// Float arithmetic
var tax = price * 0.08;
print("Tax: " + tax);

var total = price + tax;
print("Total: " + total);

// Complex expressions with floats
var result = (3.14 * 2.0) + (1.5 / 0.5);
print("Complex result: " + result);

// Float in arrays
var prices = [19.99, 29.50, 15.75, 100.0];
print("Price array created");

for (var p in prices)
{
    print("Price: " + p);
}

// Float in objects
var product = {
    name: "Widget",
    price: 24.99,
    discount: 0.15
};

print("Product name: " + product.name);
print("Product price: " + product.price);
print("Product discount: " + product.discount);

// Float comparisons
if (price > 15.0)
{
    print("Price is greater than 15");
}

if (pi < 4.0)
{
    print("Pi is less than 4");
}

// Float with functions
function calculateArea(radius)
{
    var area = 3.14159 * radius * radius;
    print("Area calculation with float: " + area);
}

calculateArea(5.5);

print("=== Advanced Test Complete ===");
