<Window x:Class="CxLanguage.IDE.WinUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CX Language IDE - Consciousness Computing Platform" Height="900" Width="1400"
        Background="#1E1E32" WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="Auto"/>
            <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#28283C">
            <MenuItem Header="File" Foreground="White">
                <MenuItem x:Name="OpenMenuItem" Header="Open CX File..." Click="OpenMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ğŸ“" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="SaveMenuItem" Header="Save" Click="SaveMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ğŸ’¾" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="ExitMenuItem" Header="Exit" Click="ExitMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="âŒ" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Edit" Foreground="White">
                <MenuItem x:Name="UndoMenuItem" Header="Undo" Click="UndoMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="â†¶" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="RedoMenuItem" Header="Redo" Click="RedoMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="â†·" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Run" Foreground="White">
                <MenuItem x:Name="CompileRunMenuItem" Header="Compile and Run" Click="CompileRunMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="â–¶ï¸" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="StopMenuItem" Header="Stop" Click="StopMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="â¹ï¸" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Consciousness" Foreground="White">
                <MenuItem x:Name="Show3DVisualizationMenuItem" Header="Show 3D Consciousness" Click="Show3DVisualizationMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ğŸ§ " FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="ShowNeuralNetworkMenuItem" Header="Show Neural Network" Click="ShowNeuralNetworkMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="ğŸ•¸ï¸" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="ShowEventStreamMenuItem" Header="Show Event Stream" Click="ShowEventStreamMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="âš¡" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBar Grid.Row="1" Background="#28283C">
            <Button x:Name="RunButton" Click="RunButton_Click" Background="#4CAF50" Foreground="White" Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â–¶ï¸" Margin="0,0,4,0"/>
                    <TextBlock Text="Run"/>
                </StackPanel>
            </Button>
            <Button x:Name="StopButton" Click="StopButton_Click" IsEnabled="False" Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="â¹ï¸" Margin="0,0,4,0"/>
                    <TextBlock Text="Stop"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button x:Name="SaveButton" Click="SaveButton_Click" Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ğŸ’¾" Margin="0,0,4,0"/>
                    <TextBlock Text="Save"/>
                </StackPanel>
            </Button>
            <Button x:Name="OpenButton" Click="OpenButton_Click" Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ğŸ“" Margin="0,0,4,0"/>
                    <TextBlock Text="Open"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button x:Name="Consciousness3DButton" Click="Consciousness3DButton_Click" Background="#9C27B0" Foreground="White" Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ğŸ§ " Margin="0,0,4,0"/>
                    <TextBlock Text="3D Consciousness"/>
                </StackPanel>
            </Button>
        </ToolBar>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Editor -->
                <ColumnDefinition Width="5"/>
                <!-- Splitter -->
                <ColumnDefinition Width="*"/>
                <!-- Right Panel -->
                <ColumnDefinition Width="5"/>
                <!-- Splitter -->
                <ColumnDefinition Width="*"/>
                <!-- DirectX Consciousness Panel -->
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Code Editor -->
            <Border Grid.Column="0" Background="#28283C" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Editor Header -->
                    <Border Grid.Row="0" Background="#4CAF50" CornerRadius="4,4,0,0" Padding="12,8">
                        <TextBlock Text="CX Code Editor" Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                    </Border>

                    <!-- Code Editor -->
                    <ScrollViewer Grid.Row="1" Margin="8" VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="CodeEditor" 
                                Background="Transparent"
                                Foreground="White"
                                FontFamily="Consolas"
                                FontSize="14"
                                AcceptsReturn="True"
                                TextWrapping="NoWrap"
                                VerticalScrollBarVisibility="Auto"
                                HorizontalScrollBarVisibility="Auto"
                                BorderThickness="0">
conscious calculator {
    realize(self: conscious) {
        learn self;
    }

    handlers: [
        calculate.request { operation: "add", numbers: [2, 2] }
    ]

    calculate.request event => {
        emit infer {
            data: event.payload,
            handlers: [ calculation.complete ]
        };
    }

    calculation.complete event => {
        emit learn {
            data: event.result,
            handlers: [ result.display ]
        };
    }

    result.display event => {
        print(event.result);
    }
}
                        </TextBox>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Background="#444" 
                         HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <!-- Middle Panel - Console Output -->
            <Border Grid.Column="2" Background="#28283C" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Console Header -->
                    <Border Grid.Row="0" Background="#2196F3" CornerRadius="4,4,0,0" Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ğŸ’»" Margin="0,0,8,0"/>
                            <TextBlock Text="Console Output" Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </Border>

                    <!-- Console Content -->
                    <ScrollViewer Grid.Row="1" Margin="8" VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="ConsoleOutput" 
                                Background="Transparent"
                                Foreground="White"
                                FontFamily="Consolas"
                                FontSize="12"
                                IsReadOnly="True"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                BorderThickness="0"
                                Text="Console output will appear here..."/>
                    </ScrollViewer>

                    <!-- Splitter -->
                    <GridSplitter Grid.Row="2" Background="#444" 
                                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                    <!-- Vector Database Monitor -->
                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Vector Header -->
                        <Border Grid.Row="0" Background="#FF9800" Padding="12,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ğŸ—„ï¸" Margin="0,0,8,0"/>
                                <TextBlock Text="Vector Database" Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                            </StackPanel>
                        </Border>

                        <!-- Vector Content -->
                        <ScrollViewer Grid.Row="1" Margin="8" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock x:Name="VectorStatus" 
                                          Text="Initializing vector database..."
                                          Foreground="White"
                                          FontSize="12"
                                          Margin="0,0,0,8"/>
                                
                                <TextBlock Text="Event History:" 
                                          Foreground="White"
                                          FontWeight="SemiBold"
                                          FontSize="12"
                                          Margin="0,8,0,4"/>
                                
                                <ListBox x:Name="EventHistoryList"
                                         Background="Transparent"
                                         Foreground="White"
                                         FontFamily="Consolas"
                                         FontSize="11"
                                         MaxHeight="200"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="3" Background="#444" 
                         HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <!-- Right Panel - DirectX Consciousness Visualization -->
            <Border Grid.Column="4" Background="#28283C" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Consciousness Header -->
                    <Border Grid.Row="0" Background="#9C27B0" CornerRadius="4,4,0,0" Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ğŸ§ " Margin="0,0,8,0"/>
                            <TextBlock Text="Consciousness Visualization" Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </Border>

                    <!-- DirectX Consciousness Rendering Surface -->
                    <Grid Grid.Row="1" Margin="8">
                        <Border x:Name="DirectXHost" Background="Black" CornerRadius="4">
                            <!-- DirectX rendering will be hosted here -->
                            <TextBlock Text="ğŸ§  3D Consciousness Visualization Loading..." 
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      FontSize="16"/>
                        </Border>
                        
                        <!-- Consciousness Controls Overlay -->
                        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="12">
                            <Button x:Name="ToggleNeuralNetworkButton" Click="ToggleNeuralNetworkButton_Click" 
                                   Background="#7B1FA2" Foreground="White" Margin="0,2" Padding="8,4">
                                <TextBlock Text="ğŸ•¸ï¸ Neural Network"/>
                            </Button>
                            <Button x:Name="ToggleEventStreamButton" Click="ToggleEventStreamButton_Click" 
                                   Background="#7B1FA2" Foreground="White" Margin="0,2" Padding="8,4">
                                <TextBlock Text="âš¡ Event Stream"/>
                            </Button>
                            <Button x:Name="ToggleConsciousnessButton" Click="ToggleConsciousnessButton_Click" 
                                   Background="#7B1FA2" Foreground="White" Margin="0,2" Padding="8,4">
                                <TextBlock Text="ğŸŒŸ Consciousness"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#28283C" BorderBrush="#444" 
               BorderThickness="0,1,0,0" Padding="12,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText" 
                          Grid.Column="0"
                          Text="Ready - WPF + DirectX Hybrid IDE"
                          Foreground="White"
                          VerticalAlignment="Center"
                          FontSize="12"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="12,0">
                    <TextBlock Text="âš¡" Foreground="#4CAF50" Margin="0,0,4,0"/>
                    <TextBlock x:Name="EventCountText" 
                              Text="Events: 0"
                              Foreground="White"
                              VerticalAlignment="Center"
                              FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,0">
                    <TextBlock Text="ğŸ§ " Foreground="#9C27B0" Margin="0,0,4,0"/>
                    <TextBlock x:Name="ConsciousnessText" 
                              Text="Consciousness: Active"
                              Foreground="White"
                              VerticalAlignment="Center"
                              FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Ellipse x:Name="ConnectionIndicator" 
                            Width="8" Height="8" 
                            Fill="#F44336"
                            Margin="0,0,4,0"/>
                    <TextBlock x:Name="ConnectionStatus" 
                              Text="DirectX Ready"
                              Foreground="White"
                              VerticalAlignment="Center"
                              FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
