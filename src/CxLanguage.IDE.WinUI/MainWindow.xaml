<Window x:Class="CxLanguage.IDE.WinUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        Title="CX Language IDE - Consciousness Computing Platform" Height="900" Width="1400"
        Background="#1E1E32" WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="Auto"/>
            <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#28283C">
            <MenuItem Header="File" Foreground="White">
                <MenuItem x:Name="NewMenuItem" Header="New CX File..." Click="NewMenuItem_Click" InputGestureText="Ctrl+N">
                    <MenuItem.Icon>
                        <TextBlock Text="📄" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="OpenMenuItem" Header="Open CX File..." Click="OpenMenuItem_Click" InputGestureText="Ctrl+O">
                    <MenuItem.Icon>
                        <TextBlock Text="📁" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="SaveMenuItem" Header="Save" Click="SaveMenuItem_Click" InputGestureText="Ctrl+S">
                    <MenuItem.Icon>
                        <TextBlock Text="💾" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="SaveAsMenuItem" Header="Save As..." Click="SaveAsMenuItem_Click" InputGestureText="Ctrl+Shift+S">
                    <MenuItem.Icon>
                        <TextBlock Text="💾" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="ExitMenuItem" Header="Exit" Click="ExitMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="❌" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Edit" Foreground="White">
                <MenuItem x:Name="UndoMenuItem" Header="Undo" Click="UndoMenuItem_Click" InputGestureText="Ctrl+Z">
                    <MenuItem.Icon>
                        <TextBlock Text="↶" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="RedoMenuItem" Header="Redo" Click="RedoMenuItem_Click" InputGestureText="Ctrl+Y">
                    <MenuItem.Icon>
                        <TextBlock Text="↷" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="SelectAllMenuItem" Header="Select All" Click="SelectAllMenuItem_Click" InputGestureText="Ctrl+A">
                    <MenuItem.Icon>
                        <TextBlock Text="📝" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem x:Name="FindMenuItem" Header="Find" Click="FindMenuItem_Click" InputGestureText="Ctrl+F">
                    <MenuItem.Icon>
                        <TextBlock Text="🔍" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="ReplaceMenuItem" Header="Replace" Click="ReplaceMenuItem_Click" InputGestureText="Ctrl+H">
                    <MenuItem.Icon>
                        <TextBlock Text="🔄" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="GoToLineMenuItem" Header="Go to Line" Click="GoToLineMenuItem_Click" InputGestureText="Ctrl+G">
                    <MenuItem.Icon>
                        <TextBlock Text="🎯" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Build" Foreground="White">
                <MenuItem x:Name="BuildMenuItem" Header="Build Project" Click="BuildMenuItem_Click" InputGestureText="Ctrl+B">
                    <MenuItem.Icon>
                        <TextBlock Text="🔨" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Run" Foreground="White">
                <MenuItem x:Name="CompileRunMenuItem" Header="Run" Click="CompileRunMenuItem_Click" InputGestureText="F5">
                    <MenuItem.Icon>
                        <TextBlock Text="▶️" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="StopMenuItem" Header="Stop" Click="StopMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="⏹️" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Consciousness" Foreground="White">
                <MenuItem x:Name="Show3DVisualizationMenuItem" Header="Show 3D Consciousness" Click="Show3DVisualizationMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="🧠" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="ShowNeuralNetworkMenuItem" Header="Show Neural Network" Click="ShowNeuralNetworkMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="🕸️" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="ShowEventStreamMenuItem" Header="Show Event Stream" Click="ShowEventStreamMenuItem_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="⚡" FontSize="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBar Grid.Row="1" Background="#28283C">
            <Button x:Name="NewButton" Click="NewButton_Click" Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📄" Margin="0,0,4,0"/>
                    <TextBlock Text="New"/>
                </StackPanel>
            </Button>
            <Button x:Name="OpenButton" Click="OpenButton_Click" Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="📁" Margin="0,0,4,0"/>
                    <TextBlock Text="Open"/>
                </StackPanel>
            </Button>
            <Button x:Name="SaveButton" Click="SaveButton_Click" Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="💾" Margin="0,0,4,0"/>
                    <TextBlock Text="Save"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button x:Name="RunButton" Click="RunButton_Click" Background="#4CAF50" Foreground="White" Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="▶️" Margin="0,0,4,0"/>
                    <TextBlock Text="Run"/>
                </StackPanel>
            </Button>
            <Button x:Name="StopButton" Click="StopButton_Click" IsEnabled="False" Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⏹️" Margin="0,0,4,0"/>
                    <TextBlock Text="Stop"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button x:Name="BuildButton" Click="BuildButton_Click" Background="#FF9800" Foreground="White" Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="�" Margin="0,0,4,0"/>
                    <TextBlock Text="Build"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button x:Name="Consciousness3DButton" Click="Consciousness3DButton_Click" Background="#9C27B0" Foreground="White" Padding="8,4">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🧠" Margin="0,0,4,0"/>
                    <TextBlock Text="3D Consciousness"/>
                </StackPanel>
            </Button>
        </ToolBar>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Editor -->
                <ColumnDefinition Width="5"/>
                <!-- Splitter -->
                <ColumnDefinition Width="*"/>
                <!-- Right Panel -->
                <ColumnDefinition Width="5"/>
                <!-- Splitter -->
                <ColumnDefinition Width="*"/>
                <!-- DirectX Consciousness Panel -->
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Code Editor -->
            <Border Grid.Column="0" Background="#28283C" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Editor Header -->
                    <Border Grid.Row="0" Background="#4CAF50" CornerRadius="4,4,0,0" Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="CX Code Editor" Foreground="White" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" x:Name="FormatButton" Content="Format (Ctrl+F)" 
                                    Background="#2E7D32" Foreground="White" 
                                    BorderThickness="0" Padding="8,4"
                                    FontSize="12" Click="FormatButton_Click"/>
                        </Grid>
                    </Border>

                    <!-- Code Editor with AvalonEdit -->
                    <avalonedit:TextEditor x:Name="CodeEditor" 
                                          Grid.Row="1"
                                          Margin="8"
                                          Background="#1E1E32"
                                          Foreground="White"
                                          FontFamily="Consolas"
                                          FontSize="14"
                                          ShowLineNumbers="True"
                                          LineNumbersForeground="Gray"
                                          BorderThickness="0">
                        <avalonedit:TextEditor.Text>conscious calculatorA
{
    realize(self: object)
    {
        learn self;
        
        emit calculate.request 
        { 
            operation: "add", 
            numbers: [2, 2] 
        };
    }
    
    on calculate.request (event)
    {
        print(event);
    }
}

conscious calculatorB
{
    realize(self: object)
    {
        learn self;
        
        // Will execute both calculate.request
        // and calculate addition.
        emit calculate.request 
        { 
            operation: "add", 
            numbers: [2, 2],
            handlers [calculate.addition]
        };
    }
    
    on calculate.request (event)
    {
        print(event);
    }

    on calculate.addition (event)
    {
        print(event);
    }
}</avalonedit:TextEditor.Text>
                    </avalonedit:TextEditor>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Background="#444" 
                         HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <!-- Middle Panel - Console Output -->
            <Border Grid.Column="2" Background="#28283C" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Console Header -->
                    <Border Grid.Row="0" Background="#2196F3" CornerRadius="4,4,0,0" Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💻" Margin="0,0,8,0"/>
                            <TextBlock Text="Console Output" Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </Border>

                    <!-- Console Content -->
                    <ScrollViewer Grid.Row="1" Margin="8" VerticalScrollBarVisibility="Auto">
                        <TextBox x:Name="ConsoleOutput" 
                                Background="Transparent"
                                Foreground="White"
                                FontFamily="Consolas"
                                FontSize="12"
                                IsReadOnly="True"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                BorderThickness="0"
                                Text="Console output will appear here..."/>
                    </ScrollViewer>

                    <!-- Splitter -->
                    <GridSplitter Grid.Row="2" Background="#444" 
                                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

                    <!-- Vector Database Monitor -->
                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Vector Header -->
                        <Border Grid.Row="0" Background="#FF9800" Padding="12,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🗄️" Margin="0,0,8,0"/>
                                <TextBlock Text="Vector Database" Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                            </StackPanel>
                        </Border>

                        <!-- Vector Content -->
                        <ScrollViewer Grid.Row="1" Margin="8" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock x:Name="VectorStatus" 
                                          Text="Initializing vector database..."
                                          Foreground="White"
                                          FontSize="12"
                                          Margin="0,0,0,8"/>
                                
                                <TextBlock Text="Event History:" 
                                          Foreground="White"
                                          FontWeight="SemiBold"
                                          FontSize="12"
                                          Margin="0,8,0,4"/>
                                
                                <ListBox x:Name="EventHistoryList"
                                         Background="Transparent"
                                         Foreground="White"
                                         FontFamily="Consolas"
                                         FontSize="11"
                                         MaxHeight="200"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="3" Background="#444" 
                         HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <!-- Right Panel - DirectX Consciousness Visualization -->
            <Border Grid.Column="4" Background="#28283C" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Consciousness Header -->
                    <Border Grid.Row="0" Background="#9C27B0" CornerRadius="4,4,0,0" Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🧠" Margin="0,0,8,0"/>
                            <TextBlock Text="Consciousness Visualization" Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                        </StackPanel>
                    </Border>

                    <!-- DirectX Consciousness Rendering Surface -->
                    <Grid Grid.Row="1" Margin="8">
                        <Border x:Name="DirectXHost" Background="Black" CornerRadius="4">
                            <!-- DirectX rendering will be hosted here -->
                            <TextBlock Text="🧠 3D Consciousness Visualization Loading..." 
                                      Foreground="White"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      FontSize="16"/>
                        </Border>
                        
                        <!-- Consciousness Controls Overlay -->
                        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="12">
                            <Button x:Name="ToggleNeuralNetworkButton" Click="ToggleNeuralNetworkButton_Click" 
                                   Background="#7B1FA2" Foreground="White" Margin="0,2" Padding="8,4">
                                <TextBlock Text="🕸️ Neural Network"/>
                            </Button>
                            <Button x:Name="ToggleEventStreamButton" Click="ToggleEventStreamButton_Click" 
                                   Background="#7B1FA2" Foreground="White" Margin="0,2" Padding="8,4">
                                <TextBlock Text="⚡ Event Stream"/>
                            </Button>
                            <Button x:Name="ToggleConsciousnessButton" Click="ToggleConsciousnessButton_Click" 
                                   Background="#7B1FA2" Foreground="White" Margin="0,2" Padding="8,4">
                                <TextBlock Text="🌟 Consciousness"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#28283C" BorderBrush="#444" 
               BorderThickness="0,1,0,0" Padding="12,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText" 
                          Grid.Column="0"
                          Text="Ready - WPF + DirectX Hybrid IDE"
                          Foreground="White"
                          VerticalAlignment="Center"
                          FontSize="12"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="12,0">
                    <TextBlock Text="⚡" Foreground="#4CAF50" Margin="0,0,4,0"/>
                    <TextBlock x:Name="EventCountText" 
                              Text="Events: 0"
                              Foreground="White"
                              VerticalAlignment="Center"
                              FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,0">
                    <TextBlock Text="🧠" Foreground="#9C27B0" Margin="0,0,4,0"/>
                    <TextBlock x:Name="ConsciousnessText" 
                              Text="Consciousness: Active"
                              Foreground="White"
                              VerticalAlignment="Center"
                              FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Ellipse x:Name="ConnectionIndicator" 
                            Width="8" Height="8" 
                            Fill="#F44336"
                            Margin="0,0,4,0"/>
                    <TextBlock x:Name="ConnectionStatus" 
                              Text="DirectX Ready"
                              Foreground="White"
                              VerticalAlignment="Center"
                              FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
