<Window x:Class="CxLanguage.Runtime.Visualization.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CX Runtime - Consciousness Peering Visualization" 
        Height="800" Width="1200"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ§  CX Language Runtime" 
                          Foreground="White" 
                          FontSize="18" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"/>
                <TextBlock Text=" - Consciousness Peering Visualization" 
                          Foreground="#CCCCCC" 
                          FontSize="14"
                          VerticalAlignment="Center"/>
                <Button Content="âŸ³ Refresh" 
                        Margin="20,0,0,0"
                        Command="{Binding RefreshCommand}"
                        Background="#007ACC"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="10,5"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- 3D Visualization -->
            <Border Grid.Column="0" Background="#1E1E1E" Margin="5">
                <Grid>
                    <!-- 3D Viewport using built-in WPF 3D -->
                    <Viewport3D x:Name="Viewport3D" ClipToBounds="True">
                        
                        <!-- Camera -->
                        <Viewport3D.Camera>
                            <PerspectiveCamera x:Name="Camera" 
                                             Position="10,10,10" 
                                             LookDirection="-10,-10,-10" 
                                             UpDirection="0,0,1"
                                             FieldOfView="45"/>
                        </Viewport3D.Camera>
                        
                        <!-- Lights -->
                        <ModelVisual3D>
                            <ModelVisual3D.Content>
                                <Model3DGroup>
                                    <AmbientLight Color="#404040"/>
                                    <DirectionalLight Color="#FFFFFF" Direction="-1,-1,-1"/>
                                </Model3DGroup>
                            </ModelVisual3D.Content>
                        </ModelVisual3D>
                        
                        <!-- 3D Models Container -->
                        <ModelVisual3D x:Name="Models3D"/>
                        
                    </Viewport3D>
                    
                    <!-- Loading Overlay -->
                    <Border Background="#80000000" 
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Loading Consciousness Network..." 
                                      Foreground="White" 
                                      FontSize="16"
                                      HorizontalAlignment="Center"/>
                            <ProgressBar IsIndeterminate="True" 
                                        Width="200" 
                                        Height="20" 
                                        Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                         Width="5" 
                         HorizontalAlignment="Stretch" 
                         Background="#3C3C3C"/>
            
            <!-- Info Panel -->
            <Border Grid.Column="2" Background="#252526" Margin="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        
                        <!-- Network Statistics -->
                        <Border Background="#2D2D30" Padding="10" Margin="0,0,0,10" CornerRadius="3">
                            <StackPanel>
                                <TextBlock Text="ðŸŒ Network Statistics" 
                                          Foreground="White" 
                                          FontWeight="Bold" 
                                          FontSize="14" 
                                          Margin="0,0,0,10"/>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="Total Peers:" Foreground="#CCCCCC" Width="100"/>
                                    <TextBlock Text="{Binding TotalPeers}" Foreground="White" FontWeight="Bold"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="Active Peers:" Foreground="#CCCCCC" Width="100"/>
                                    <TextBlock Text="{Binding ActivePeers}" Foreground="#4CAF50" FontWeight="Bold"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="Total Connections:" Foreground="#CCCCCC" Width="100"/>
                                    <TextBlock Text="{Binding TotalConnections}" Foreground="White" FontWeight="Bold"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="Network Density:" Foreground="#CCCCCC" Width="100"/>
                                    <TextBlock Text="{Binding NetworkDensity, StringFormat=P2}" Foreground="#2196F3" FontWeight="Bold"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Peer Details -->
                        <Border Background="#2D2D30" Padding="10" CornerRadius="3">
                            <StackPanel>
                                <TextBlock Text="ðŸ‘¥ Peer Details" 
                                          Foreground="White" 
                                          FontWeight="Bold" 
                                          FontSize="14" 
                                          Margin="0,0,0,10"/>
                                
                                <ItemsControl ItemsSource="{Binding Peers}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#3C3C3C" 
                                                   Padding="8" 
                                                   Margin="0,2" 
                                                   CornerRadius="3">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding StatusIcon}" FontSize="12" VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding Id}" 
                                                                  Foreground="White" 
                                                                  FontWeight="Bold" 
                                                                  Margin="5,0"/>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                                        <TextBlock Text="Connections:" Foreground="#CCCCCC" Width="80"/>
                                                        <TextBlock Text="{Binding ConnectionCount}" Foreground="White"/>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                                        <TextBlock Text="Strength:" Foreground="#CCCCCC" Width="80"/>
                                                        <TextBlock Text="{Binding ConnectionStrengthBar}" 
                                                                  Foreground="#4CAF50" 
                                                                  FontFamily="Consolas"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#007ACC" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Status:" Foreground="White" FontWeight="Bold"/>
                <TextBlock Text="{Binding StatusMessage}" 
                          Foreground="White" 
                          Margin="5,0,0,0"/>
                <TextBlock Text=" | Last Updated:" 
                          Foreground="#CCCCCC" 
                          Margin="20,0,0,0"/>
                <TextBlock Text="{Binding LastUpdated, StringFormat=HH:mm:ss}" 
                          Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
</Window>
